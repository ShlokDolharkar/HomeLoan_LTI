package com.app.demo.repository;

import java.util.List;

import javax.persistence.EntityManager;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

import com.app.demo.pojo.Vehicle;

@Repository
public class VehicleRepoImp1 implements VehicleRepo{
@Autowired
EntityManager eMan;
	@Override
	public boolean addVehicle(Vehicle vehicle) {
		// TODO Auto-generated method stub
		eMan.persist(vehicle);
		return true;
	}

	@Override
	public boolean updateVehicle(Vehicle vehicle) {
		// TODO Auto-generated method stub
		eMan.merge(vehicle);
		return true;
	}

	@Override
	public boolean deleteVehicle(String vehicleNo) {
		// TODO Auto-generated method stub
		Vehicle obj=eMan.find(Vehicle.class, vehicleNo);
		eMan.remove(obj);
		return true;
	}

	@Override
	public List<Vehicle> getVehicles() {
		// TODO Auto-generated method stub
		List<Vehicle> ls= eMan.createQuery("from vehicle").getResultList();
		return ls;
	}

	@Override
	public Vehicle searchVehicles(String vehicleNo) {
		// TODO Auto-generated method stub

		Vehicle obj=eMan.find(Vehicle.class, vehicleNo);
		return obj;
	}

}
